services:
    - Nepttune\AdminRouterFactory
    router: @Nepttune\AdminRouterFactory::createRouter

    - Nepttune\Model\Authenticator
    authenticator: @Nepttune\Model\Authenticator

    loginForm:
        class: Nepttune\Component\LoginForm
    breadcrumb:
        class: Nepttune\Component\Breadcrumb
    menu:
        class: Nepttune\Component\ConfigMenu(%configMenu%)

    - Nepttune\Model\LoginLogModel

parameters:
    destAuthHomepage: ':Admin:Default:default'
    destUserProfile: ':Admin:Profile:view'   # false or dest
    
    destSignIn: ':Nepttune:Sign:in'
    destSignOut: ':Nepttune:Sign:out'
    redirectSignIn: ':Admin:Default:default'
    redirectSignOut: ':Nepttune:Sign:in'
    
    configMenu: [
        user:
            name: 'Users'
            icon: 'user'
            dest: ':Nepttune:User:default'
        role:
            name: 'Roles'
            icon: 'bolt'
            dest: ':Nepttune:Role:default'
    ]
  
